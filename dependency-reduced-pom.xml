<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.aixm.delorean</groupId>
  <artifactId>delorean</artifactId>
  <name>delorean</name>
  <version>0.2.0</version>
  <url>https://github.com/3l-gee/delorean</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>21</release>
          <compilerArgument>-Xlint:deprecation</compilerArgument>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>*:*</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer>
                  <mainClass>com.aixm.delorean.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>enable-hyper-jaxb</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jvnet.jaxb</groupId>
            <artifactId>jaxb-maven-plugin</artifactId>
            <version>4.0.8</version>
            <executions>
              <execution>
                <id>generate-aixm5_2</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>generate</goal>
                </goals>
                <configuration>
                  <noFileHeader>true</noFileHeader>
                  <extension>true</extension>
                  <schemaDirectory>${project.basedir}/schema/aixm5_2/aixm/message</schemaDirectory>
                  <schemaIncludes>
                    <include>AIXM_BasicMessage.xsd</include>
                  </schemaIncludes>
                  <bindingDirectory>${project.basedir}/schema/aixm5_2/binding</bindingDirectory>
                  <bindingIncludes>
                    <include>*.xjb</include>
                  </bindingIncludes>
                  <generateDirectory>${project.basedir}/src/main/java</generateDirectory>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <extension>true</extension>
              <args>
                <arg>-Xannotate</arg>
                <arg>-XremoveAnnotation</arg>
                <arg>-Xhyperjaxb-jpa</arg>
              </args>
              <plugins>
                <plugin>
                  <groupId>org.jvnet.jaxb</groupId>
                  <artifactId>jaxb-plugin-annotate</artifactId>
                  <version>4.0.8</version>
                </plugin>
                <plugin>
                  <groupId>org.patrodyne.jvnet</groupId>
                  <artifactId>hisrc-hyperjaxb-ejb-plugin</artifactId>
                  <version>${hyperjaxb.version}</version>
                </plugin>
              </plugins>
              <verbose>true</verbose>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>enable-jaxb</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jvnet.jaxb</groupId>
            <artifactId>jaxb-maven-plugin</artifactId>
            <version>4.0.8</version>
            <executions>
              <execution>
                <id>generate-aixm5_2</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>generate</goal>
                </goals>
                <configuration>
                  <schemaDirectory>${project.basedir}/schema/aixm5_2/aixm/message</schemaDirectory>
                  <schemaIncludes>
                    <include>AIXM_BasicMessage.xsd</include>
                  </schemaIncludes>
                  <bindingDirectory>${project.basedir}/schema/aixm5_2/binding</bindingDirectory>
                  <bindingIncludes>
                    <include>*.xjb</include>
                  </bindingIncludes>
                  <generateDirectory>${project.basedir}/src/main/java</generateDirectory>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <extension>true</extension>
              <args>
                <arg>-Xannotate</arg>
                <arg>-XremoveAnnotation</arg>
              </args>
              <plugins>
                <plugin>
                  <groupId>org.jvnet.jaxb</groupId>
                  <artifactId>jaxb-plugin-annotate</artifactId>
                  <version>4.0.8</version>
                </plugin>
              </plugins>
              <verbose>true</verbose>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <releases />
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>osgeo</id>
      <name>OSGeo Release Repository</name>
      <url>https://repo.osgeo.org/repository/release/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>hisrc-maven-repository</id>
      <name>Hi-s-rc Maven Repository</name>
      <url>https://storage.googleapis.com/hisrc-maven-repository/releases</url>
    </pluginRepository>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.10.3</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>opentest4j</artifactId>
          <groupId>org.opentest4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-platform-commons</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.2</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <hibernate.version>6.6.1.Final</hibernate.version>
    <maven.compiler.target>21</maven.compiler.target>
    <maven.compiler.source>21</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jpa.version>3.2.0</jpa.version>
    <geotools.version>32.0</geotools.version>
    <jaxb.version>4.0.2</jaxb.version>
    <hyperjaxb.version>2.2.1</hyperjaxb.version>
  </properties>
</project>
