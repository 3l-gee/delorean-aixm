<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.aixm.delorean</groupId>
  <artifactId>delorean</artifactId>
  <name>delorean</name>
  <version>0.2.0</version>
  <url>https://github.com/3l-gee/delorean</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>21</release>
          <annotationProcessorPaths>
            <path>
              <groupId>org.hibernate.orm</groupId>
              <artifactId>hibernate-processor</artifactId>
              <version>${hibernate.version}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <version>4.0.0-M12</version>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <mainClass>com.aixm.delorean.Main</mainClass>
          <cleanupDaemonThreads>false</cleanupDaemonThreads>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>*:*</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.aixm.delorean.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>enable-hyper-jaxb</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.patrodyne.jvnet</groupId>
            <artifactId>hisrc-hyperjaxb-maven-plugin</artifactId>
            <version>${hisrc-hyperjaxb.version}</version>
            <executions>
              <execution>
                <id>generate</id>
                <goals>
                  <goal>generate</goal>
                </goals>
                <configuration>
                  <noFileHeader>true</noFileHeader>
                  <extension>true</extension>
                  <schemaDirectory>${project.basedir}/schema/aixm5_2/aixm/message</schemaDirectory>
                  <schemaIncludes>
                    <include>AIXM_BasicMessage.xsd</include>
                  </schemaIncludes>
                  <bindingDirectory>${project.basedir}/schema/aixm5_2/hyper</bindingDirectory>
                  <bindingIncludes>
                    <include>*.xjb</include>
                  </bindingIncludes>
                  <generateDirectory>${project.basedir}/src/main/java</generateDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.2</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <postgis.version>2025.1.1</postgis.version>
    <maven-antrun-plugin.version>3.1.0</maven-antrun-plugin.version>
    <slf4j.version>2.0.12</slf4j.version>
    <jpa-api.version>3.2.0</jpa-api.version>
    <freemarker.version>2.3.34</freemarker.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <hikaricp.version>7.0.2</hikaricp.version>
    <hibernate.version>7.1.0.Final</hibernate.version>
    <annotation.version>2.1.1</annotation.version>
    <h2database.version>2.2.224</h2database.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <eclipselink.version>4.0.2</eclipselink.version>
    <maven-min.version>3.9.0</maven-min.version>
    <hisrc-hyperjaxb.version>2.2.1</hisrc-hyperjaxb.version>
    <jts.version>1.20.0</jts.version>
    <proj4.version>1.4.1</proj4.version>
    <postgresql.version>42.7.3</postgresql.version>
    <hisrc-basicjaxb.version>2.2.1</hisrc-basicjaxb.version>
  </properties>
</project>
