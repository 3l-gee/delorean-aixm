            <plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>3.1.0</version>
				<configuration>
					<mainClass>org.example.root_header.Main</mainClass>
					<cleanupDaemonThreads>false</cleanupDaemonThreads>
				</configuration>
			</plugin>
		</plugins>
	</build>

    <profiles>
        <profile>
            <id>enable-hyper-jaxb</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.patrodyne.jvnet</groupId>
                        <artifactId>hisrc-hyperjaxb-maven-plugin</artifactId>
                        <version>${hisrc-hyperjaxb.version}</version>
                        <executions>
                            <execution>
                                <id>generate</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <noFileHeader>true</noFileHeader>
                                    <extension>true</extension>
                                    <schemaDirectory>${project.basedir}/schema/aixm5_2/aixm/message</schemaDirectory>
                                    <schemaIncludes>
                                        <include>AIXM_BasicMessage.xsd</include>
                                    </schemaIncludes>
                                    <bindingDirectory>${project.basedir}/schema/aixm5_2/binding</bindingDirectory>
                                    <bindingIncludes>
                                        <include>*.xjb</include>
                                    </bindingIncludes>
                                    <generateDirectory>${project.basedir}/src/main/java</generateDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

